
<div class="panel-group screen">
<div class="panel-heading">
       <h3>Incidentes</h3>
    <button class="btn btn-primary"" ng-click="NuevoIncidenteModal()">
            <i class="fa fa-plus-circle"></i> Nuevo Incidente
        </button> 
</div>
 <div class="panel-collapse in">
  <div class="panel-body">
      <div class="row col-md-10">
        @*Clientes                                             -*@ 
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Clientes:  &nbsp;<span aria-label="Campo Obligatorio" style="color:red"></span></label>       
                </div>
                <select class="form-control" ng-model="Select.Cliente" 
                    ng-options="c.idCliente as c.Cliente for c in lstClientes">
                    <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
        @*Productos                                             *@
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Productos: &nbsp;<span aria-label="Campo Obligatorio" style="color:red"></span></label>
                </div>
                <select class="form-control" ng-model="Select.Producto" ng-options="p.idProducto as p.Producto for p in lstProductos"
                   ng-change="LoadModulos(Select.Producto)">
                    <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
       @* Modulos                                               *@
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Modulos: &nbsp;</label>
                </div>
                <select class="form-control" ng-model="Select.Modulo"
                 ng-options="m.idModulo as m.Modulo for m in lstModulos"
                     ng-change="LoadComponentes(Select.Modulo)">
                    <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
       @* Componentes                                           *@
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Componentes: &nbsp;</label>
                </div>
                <select class="form-control" ng-model="Select.Componente"
                 ng-options="c.idComponente as c.Componente for c in lstComponentes">
                    <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
       @* Lideres                                               *@
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Lider: &nbsp;</label>
                </div>
                <select class="form-control" ng-model="Select.Lider"
                    ng-options="l.idLider as l.Lider for l in lstLideres">
                    <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
       @* Consultores                                           *@
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Consultor: &nbsp;</label>
                </div>
                <select class="form-control" ng-model="Select.Consultor" 
                    ng-options="c.idConsultor as c.Consultor for c in lstConsultores">
                    <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
       @* Testers                                               *@
       <div class="col-md-3">
            <div class="form-group">
                <div class="col-md-12">
                    <label>Tester: &nbsp;</label>
                </div>
               <select class="form-control" ng-model="Select.Tester"
                    ng-options="t.idTester as t.Tester for t in lstTesters">
                   <option value="" ng-hide="true">Seleccione</option>
                </select>
            </div>
        </div>
      </div>
      <div class="row"></div>
       @* Mostrar Control de Clidad, Buscar y Buscar Pendientes *@
       <div class="col-md-10">
        <div class="pull-center">
         <div class="checkbox" style="display: inline-block; margin-right: 10px;">
           <label>
            <input type="checkbox" @*ng-model="Ctrl.bMostrarQC"*@ style="height:20px;width: 10%;margin-top: 0px;margin-left:-25px;" class="ng-pristine ng-untouched ng-valid">
             Mostrar Control de Calidad
           </label>
         </div>
         <span class="btn btn-primary" ng-click="LoadIncidentes()"><i class="fa fa-search"></i> Buscar</span>
         <span class="btn btn-warning" ng-click="LoadIncidentesInactivos()"><i class="fa fa-exclamation-circle"></i> Solo Pendientes</span>
         <button class="btn btn-info" ng-csv="lstIncidentes" filename="Incidentes {{FILTROACTIVIDADES.dFechaFin}}.csv" type="submit"><i class="fa fa-file-excel-o"></i> Exportar a Excel</button>
        </div>
       </div>
       @* Grid de Incidentes                                    *@
       <div class=" col-md-12 TablaDivResize">
        <div class="row TablaDivResize"> 
          <div class="gridStyle TablaDivResize" ng-grid="gridIncidentes">
          </div>
        </div>
       </div>
  </div>
 </div>
</div>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            var scope = $('#V_Catalogos').scope();
            $('.TablaDivResize').trigger('resize');
            scope.limpiarForm();
            scope.LoadProductos();
            scope.LoadTipoIncidente();
            scope.LoadClientes();
            scope.LoadLideres();
            scope.LoadConsultores();
            scope.LoadTesters();

        }, 1000);
    });
</script>